# Docker Environment Variables
# Копировать в .env рядом с docker-compose.yml

# ==================== Security ====================
# CRITICAL: Generate a strong random key using:
#   openssl rand -hex 32
#   OR: python -c "import secrets; print(secrets.token_hex(32))"
# This key is used for JWT token signing - keep it secret!
# Minimum 32 characters required
# NEVER use default/example values in production!
SECRET_KEY=GENERATE_USING_OPENSSL_RAND_HEX_32_COMMAND_ABOVE

# ==================== MySQL ====================
# CRITICAL: Generate strong passwords using: openssl rand -base64 32
# NEVER use weak passwords like 'password', 'koordinator_db_password', etc.
# Use different strong passwords for root and application user
MYSQL_ROOT_PASSWORD=GENERATE_STRONG_PASSWORD_USING_OPENSSL_RAND_BASE64_32
MYSQL_DATABASE=koordinator
MYSQL_USER=koordinator
MYSQL_PASSWORD=GENERATE_STRONG_PASSWORD_USING_OPENSSL_RAND_BASE64_32

# ==================== Application ====================
DEBUG=false
CORS_ORIGINS=["http://localhost","http://localhost:80"]

# ==================== Optional ====================
# INTERNAL_EMAIL_DOMAIN=your-domain.com
