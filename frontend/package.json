{
  "name": "koordinator",
  "private": true,
  "version": "1.0.7",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && NODE_ENV=development electron .\"",
    "electron:multi-1": "NODE_ENV=development electron . --user-data-dir=.user-data-1",
    "electron:multi-2": "NODE_ENV=development electron . --user-data-dir=.user-data-2",
    "electron:build": "npm run build && electron-builder",
    "build:win7": "node scripts/build-win7.js"
  },
  "main": "electron/main.cjs",
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@tanstack/query-sync-storage-persister": "^5.90.19",
    "@tanstack/react-query": "^5.90.16",
    "@tanstack/react-query-persist-client": "^5.90.19",
    "axios": "^1.13.2",
    "bonjour-service": "^1.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.1",
    "emoji-picker-react": "^4.16.1",
    "exceljs": "^4.4.0",
    "i18next": "^25.7.4",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.562.0",
    "mammoth": "^1.11.0",
    "react": "^19.2.2",
    "react-dom": "^19.2.2",
    "react-i18next": "^16.5.1",
    "react-router-dom": "^7.12.0",
    "recharts": "^3.6.0",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/parser": "^8.53.0",
    "@typescript-eslint/typescript-estree": "^8.53.0",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "depcheck": "^1.4.7",
    "electron": "^34.5.8",
    "electron-builder": "^26.4.0",
    "escomplex": "^2.0.0-alpha",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "ts-morph": "^27.0.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "ru.mil.coordinator",
    "productName": "КООРДИНАТОР",
    "publish": [
      {
        "provider": "github",
        "owner": "tonojkeee",
        "repo": "koordinator"
      }
    ],
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png",
      "category": "Utility"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.png"
    },
    "extraResources": [
      {
        "from": "public/icon.png",
        "to": "icon.png"
      }
    ]
  }
}